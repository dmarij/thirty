<% require 'gchart' %>
<% active = current_user.challenges.where(final_state: 'active').count %>
<% done = current_user.challenges.where(final_state: 'done').count %>
<% failed = current_user.challenges.where(final_state: 'failed').count %>

<% @legend = ["Active #{active}", "Done #{done}", "Failed #{failed}"] %>
<% @title = '' %>
<% @data = [active, done, failed] %>

<%= image_tag(Gchart.pie_3d(:data => @data, :title => @title, :legend => @legend,  :bar_colors => ['3a87ad','999999','6E6E6E'], size: '350x180')) %>
