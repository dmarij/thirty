<div class="span8">
	<div>
		<div>
		<h3 class="muted text-info bordered"><%= @challenge.title %></h3>
		<%= @challenge.description.html_safe %>
		</div>
		<div>
		<br/>
		<%= link_to('<i class="icon-pencil"></i> Edit'.html_safe, edit_challenge_path(@challenge), class: 'btn btn-default') %>
		<%= link_to('<i class="icon-trash"></i> Delete'.html_safe, @challenge, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default') %>
		<% if @challenge.final_state == 'active' %>
		<%= link_to('<i class="icon-thumbs-up"></i> Done'.html_safe, done_challenge_path(@challenge), class: 'btn btn-default') %>
		<%= link_to('<i class="icon-thumbs-down"></i> Give up'.html_safe, give_up_challenge_path(@challenge), class: 'btn btn-default') %>
		<% else %>
		<%= link_to('<i class="icon-refresh"></i> Reactivate'.html_safe, reactivate_challenge_path(@challenge), class: 'btn btn-default') %>
		<% end %>
		</div>
	</div>
	<br/>
	<%= link_to 'Back', session[:return_to_aft_chall] %>


	<h3 class="muted bordered">Notes</h3>
</div>
<aside class="span4">
<h3 class="muted bordered">Status</h3>
<p class="timestamp">Started on <%=@challenge.created_at.to_date%>.</p>

<% if @challenge.state == 'In progress'%>
		<span class="badge badge"><%= @challenge.duration %></span>
		<% if @challenge.days_from_start == 0 %>
			<div class="progress progress-info progress-striped active"><p class="text-info text-center smallertext">0 out of <%= @challenge.duration %> days completed. Good luck!</p></div>
		<% else %>
			<div class="progress progress-info progress-striped active">
 				<div class="bar" style="width: <%= @challenge.percent_complete %>%;"><p><%= @challenge.days_from_start %></p>
 				</div>
 			</div>
 		<% end %>
<% elsif @challenge.state == 'Expired' %>
		<span class="badge badge"><%= @challenge.duration %></span>
		<div class="progress progress-info"><div class="bar" style="width: 100%;"><p class="text-center"><%= @challenge.duration %> out of <%= @challenge.duration %> days completed. Expired <%= @challenge.days_from_start - @challenge.duration%> days ago!</p></div></div>
<% elsif @challenge.state == 'Done' %>
		<span class="badge badge"><%= @challenge.duration %></span>
		<div class="progress progress-success"><div class="bar" style="width: 100%;"><p class="text-center">Done!</p></div></div>
<% elsif @challenge.state == 'Failed' %>
		<span class="badge badge"><%= @challenge.duration %></span>
		<div class="progress progress-danger"><div class="bar" style="width: 100%;"><p class="text-center">Failed!</p></div></div>
<% end %>
</aside>







